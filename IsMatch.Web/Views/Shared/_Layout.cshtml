<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>@(ViewBag.Title ?? "我的博客")</title>
    <link rel="stylesheet" type="text/css" href="~/lib/layui/css/layui.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--加载meta IE兼容文件-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Styles", false)
</head>
<body>
    <div class="header">
        <div class="menu-btn">
            <div class="menu"></div>
        </div>
        <h1 class="logo">
            <a href="/">
                <span>IsMatch</span>
                <img src="~/images/logo.png">
            </a>
        </h1>
        <div class="nav">
            <a href="/" class="active">文章</a>
            <a href="@Url.Action("Whisper")">微语</a>
            <a href="@Url.Action("Leacots")">留言</a>
            <a href="@Url.Action("Album")">相册</a>
            <a href="@Url.Action("About")">关于</a>
        </div>
        <ul class="layui-nav header-down-nav">
            <li class="layui-nav-item"><a href="/" class="active">文章</a></li>
            <li class="layui-nav-item"><a href="@Url.Action("Whisper")">微语</a></li>
            <li class="layui-nav-item"><a href="@Url.Action("Leacots")">留言</a></li>
            <li class="layui-nav-item"><a href="@Url.Action("Album")">相册</a></li>
            <li class="layui-nav-item"><a href="@Url.Action("About")">关于</a></li>
        </ul>
        @*<p class="welcome-text">
                欢迎来到<span class="name">小明</span>的博客~
            </p>*@
    </div>


    @RenderBody()
    <div class="footer-wrap">
        <div class="footer w1000">
            @*<p>
                <span>Copyright</span><span>&copy;</span><span>2017</span><a href="http://www.ismatch.cn">倚楼听风雨</a><span>Design By 傻大蒙</span>
            </p>
            <p>
                <a href="#" target="_blank">桂ICP备17004359号</a>
            </p>*@
            <div class="qrcode">
                <img src="~/images/qrcode.jpg">
            </div>
            <div class="practice-mode">
                @*<img src="~/images/down_img.jpg">*@
                <div class="text">
                    <h4 class="title">我的联系方式</h4>
                    <p>知乎<span class="zhihu">不给你看</span></p>
                    <p>新浪微博<span class="weibo">还是不给你看</span></p>
                    <p>邮箱<span class="email">ismatch@qq.com</span></p>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/layui/layui.js"></script>
    <script type="text/javascript">
        layui.config({
            base: '../../js/util/'
        }).use(['menu'], function () {
            var menu = layui.menu;
            menu.init();
        })
    </script>
    @RenderSection("Scripts", false)
</body>
</html>